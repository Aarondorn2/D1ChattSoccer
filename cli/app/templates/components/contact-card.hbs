<div class="card contact-card">
  <div class="card-header contact-card-heading">
    <h3 class="oswald upper">{{title}}</h3>
    <h6>{{subtitle}} </h6>
  </div>
  <div class="card-body contact-card-body">
    {{yield}}
    {{#if person}}
      <div class="row">
        <div class="col-sm-1">
          {{fa-icon "user" fixedWidth=true}}
        </div>
        <div class="col-sm-10">
        <b>{{person}}</b>
        </div>
      </div>
    {{/if}}
    {{#if phone}}
      <div class="row">
        <div class="col-sm-1">
          {{fa-icon "phone-square" fixedWidth=true}}
        </div>
        <div class="col-sm-10">
        {{phone}}
        </div>
      </div>
    {{/if}}
    {{#if email}}
      <div class="row">
        <div class="col-sm-1">
          {{fa-icon "envelope" fixedWidth=true}}
        </div>
        <div class="col-sm-10">
        {{email}}
        </div>
      </div>
    {{/if}}
    {{#if addr}}
      <div class="row">
        <div class="col-sm-1">
          {{fa-icon "map-marker" fixedWidth=true}}
        </div>
        <div class="col-sm-10">
        {{addr}}
        </div>
      </div>
    {{/if}}
  </div>
  {{#if website}}
    <div class="card-footer contact-card-footer">
      <a href="{{website}}" class="btn btn-primary btn-large" rel="noopener" target="_blank">
        Visit Website!
      </a>
    </div>
  {{/if}}
</div>