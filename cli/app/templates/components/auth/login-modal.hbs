{{#bs-modal
  open=showModal
  onHidden=onClose
  as |modal|}}
  {{#modal.header}}
    <h4>
      Login <small>select a login method</small>
    </h4>
  {{/modal.header}}
  {{#modal.body}}
    <div class="text-center login-icons">
      <a href="#" title="Sign in with Facebook" {{action logIn "facebook-connect"}}>
        {{fa-icon "facebook" size=2}}
      </a>
      <a href="#" title="Sign in with Google" {{action logIn "google-oauth2"}}>
        {{fa-icon "google" size=2}}
      </a>
      <a href="#" title="Sign in with an Email and Password" {{action "toggleEmail"}}>
        {{fa-icon "envelope" size=2}}
      </a>
    </div>
    <hr>
    {{#if showEmail}}
      <br>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text text-red">
            {{fa-icon "user" fixedWidth=true}}
          </span>
        </div>
        {{input type="text" value=email placeholder="Email" class="form-control" insert-newline="submitLogin"}}
      </div>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text text-red">
            {{fa-icon "lock" fixedWidth=true}}
          </span>
        </div>
        {{input type="password" value=password placeholder="Password" class="form-control" insert-newline="submitLogin"}}
      </div>
      {{!-- <a {{action "showResetPassword"}} href="#" style="font-size: .8em;">Forgot Password?</a> --}}
      {{#if errorMessage}}
        <div class="login-error">
          {{errorMessage}}
        </div>
        <br />
      {{/if}}
      {{#if session.isWorking}}
        <div class="login-spinner">
          {{fa-icon "spinner" spin=true size=4}}
        </div>
        <div class="clearfix" />
      {{/if}}

      <div class="text-center">
        <button class="btn btn-default text-red" {{action logIn "email" email password}}>
          <strong>Login</strong>
        </button>
        {{!-- <a {{action "routeToRegister"}} class="btn login-btn pull-left" ><button class="btn" data-dismiss="modal">Register</button></a> --}}
      </div>
    {{/if}}

    {{!-- <div id="reset-password" class="reset-password hide">

        {{#alert-message display=isPasswordResetFirstAttempt type='info'}}
          Enter your email address and we'll send a reset link.
        {{/alert-message}}
        {{#alert-message display=isPasswordResetSuccess type='success'}}
          Success!  A password reset link was emailed to you.
        {{/alert-message}}

        {{#alert-message display=isPasswordResetBadEmailError type='danger'}}
          This email is invalid or does not belong to an account.
        {{/alert-message}}
        {{alert-message display=isPasswordResetUnknownError type='danger'}}

        <div class="input-group">
          <span class="input-group-addon">{{fa-icon "user" fixedWidth=true}}</span>
          {{input type="text" value=resetEmail placeholder="Email" class="form-control" insert-newline="submitLogin"}}
        </div>

        <br />
        <div class="reset-spinner" style="text-align:center;" class="hide" id="reset-spinner">
          {{fa-icon "spinner" spin=true size=4}}
        </div>
        <div class="clearfix" />

        <div style="text-align: center">
          <a {{action "resetPassword"}} class="btn login-btn" ><button class="btn" id="reset-button">Send Reset Email</button></a>
        </div>

    </div> --}}
  {{/modal.body}}
{{/bs-modal}}
